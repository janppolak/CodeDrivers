@using CodeDrivers.Models.Car
@using CodeDrivers.Models
@model CodeDrivers.Models.Car.Car
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="carSearch-mainPanel">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <h1>Wyszukaj pojazd</h1>
        <div class="Filter-Car">
            <select id="brandDropdown" name="searchTextBrand">

                @if ((string)ViewData["SearchTextBrand"] == "Wszystko")
                {
                    <option value="Wszystko" selected>Wszystko</option>
                }
                else
                {
                    <option value="Wszystko">Wszystko</option>
                }
                @foreach (var carBrand in Enum.GetValues(typeof(CarBrand)))
                {
                    @if (carBrand.ToString() == (string)ViewData["SearchTextBrand"])
                    {
                        <option value="@carBrand" selected>@carBrand</option>
                    }
                    else
                    {
                        <option value="@carBrand">@carBrand</option>
                    }
                }
            </select>

            <select id="segmentDropdown" name="segmentDropdownText">
                @if ((string)ViewData["SegmentDropdownText"] == "Wszystko")
                {
                    <option value="Wszystko" selected>Wszystko</option>
                }
                else
                {
                    <option value="Wszystko">Wszystko</option>
                }
                @foreach (var carSegment in Enum.GetValues(typeof(CarSegment)))
                {
                    @if (carSegment.ToString() == (string)ViewData["SegmentDropdownText"])
                    {
                        <option value="@carSegment" selected>@carSegment</option>
                    }
                    else
                    {
                        <option value="@carSegment">@carSegment</option>
                    }
                }
            </select>
            <select id="gearTypeDropdown" name="gearTypeDropdownText">
                @if ((string)ViewData["GearTypeDropdownText"] == "Wszystko")
                {
                    <option value="Wszystko" selected>Wszystko</option>
                }
                else
                {
                    <option value="Wszystko">Wszystko</option>
                }
                @foreach (var gearType in Enum.GetValues(typeof(GearType)))
                {
                    @if (gearType.ToString() == (string)ViewData["GearTypeDropdownText"])
                    {
                        <option value="@gearType" selected>@gearType</option>
                    }
                    else
                    {
                        <option value="@gearType">@gearType</option>
                    }
                }
            </select>
            <select id="motorTypeDropdown" name="motorTypeDropdownText">
                @if ((string)ViewData["MotorTypeDropdownText"] == "Wszystko")
                {
                    <option value="Wszystko" selected>Wszystko</option>
                }
                else
                {
                    <option value="Wszystko">Wszystko</option>
                }
                @foreach (var motorType in Enum.GetValues(typeof(MotorType)))
                {
                    @if (motorType.ToString() == (string)ViewData["MotorTypeDropdownText"])
                    {
                        <option value="@motorType" selected>@motorType</option>
                    }
                    else
                    {
                        <option value="@motorType">@motorType</option>
                    }
                }
            </select>
            <label>Początek:</label>
            <input type="date" data-val="true" data-val-required="To pole jest wymagane." name="dateStart" value="@((DateTime)(ViewData["DateStart"] ?? DateTime.Now))" />
            <label>Koniec:</label>
            <input type="date" data-val="true" data-val-required="To pole jest wymagane." name="dateEnd" value="@((DateTime)(ViewData["DateEnd"] ?? DateTime.Now))" />

            <button type="submit">Wyszukaj</button>

        </div>


    }
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

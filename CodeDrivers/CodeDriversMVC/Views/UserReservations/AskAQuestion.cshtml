
@{
    ViewData["Title"] = "AskAQuestion";
    var reservationId = ViewBag.ReservationId;
}

<h1 style="text-align:center;">Zadaj pytanie</h1>
<form asp-action="AskAQuestion">
    <div class="form-group" style="display: flex; flex-direction: column; align-items: center;">
        <textarea class="form-control" name="message" id="messageTextArea" rows="5" style="width: 500px; resize: none;"></textarea>
        <input type="hidden" name="reservationId" value="@reservationId" />
        <button type="submit" class="btn btn-ask" style="margin-top: 10px;">Wyślij</button>
    </div>
</form>
<style>
    .btn-ask {
        color: #fff;
        background-color: #5cb85c;
        border-color: #4cae4c;
    }
</style>